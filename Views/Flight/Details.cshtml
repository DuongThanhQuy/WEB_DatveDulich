@model TravelFinalProject.Models.DboFlight

@{
    ViewData["Title"] = Model.Tags;
    Layout = "~/Views/Shared/_Layout.cshtml";

    string url = $"/flight-detail/{Model.Alias}-{Model.FlightId}.html";
    List<DboFlight> lsFlights = ViewBag.FlightL;
}

<!--================== PAGE-COVER ================-->
<section class="page-cover" id="cover-flight-detail">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-title">Flight Detail Left Sidebar</h1>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Flight Detail Left Sidebar</li>
                </ul>
            </div><!-- end columns -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end page-cover -->
<!--===== INNERPAGE-WRAPPER ====-->
<section class="innerpage-wrapper">
    <div id="flight-details" class="innerpage-section-padding">
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-12 col-lg-3 side-bar left-side-bar">

                    <div class="side-bar-block booking-form-block">
                        <h2 class="selected-price">@Model.Price.Value.ToString("#,##0") VNĐ<span>@Model.FlightName</span></h2>

                        <div class="booking-form">
                            <h3>Book @Model.FlightName</h3>
                            <p>Find your dream flight today</p>

                            <form id="flight_frm_booking" name="flight_frm_booking" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="First Name" id="txt_first_name" name="txt_first_name" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Last Name" id="txt_last_name" name="txt_last_name" />
                                </div>

                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email" id="txt_email" name="txt_email" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Phone" id="txt_phone" name="txt_phone" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Leaving From" id="txt_from" name="txt_from" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Leaving To" id="txt_to" name="txt_to" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control dpd1" placeholder="Check in Date" id="txt_chkin_date" name="txt_chkin_date" />                                               <i class="fa fa-calendar"></i>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control dpd2" placeholder="Check out Date" id="txt_chkout_date" name="txt_chkout_date" />                                               <i class="fa fa-calendar"></i>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 col-lg-12 col-xl-6 no-sp-r">
                                        <div class="form-group right-icon">
                                            <select class="form-control" id="txt_adults" name="txt_adults">
                                                <option selected value="">Adults</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                            </select>
                                            <i class="fa fa-angle-down"></i>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-lg-12 col-xl-6 no-sp-l">
                                        <div class="form-group right-icon">
                                            <select class="form-control" id="txt_children" name="txt_children">
                                                <option selected value="">Children</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                            </select>
                                            <i class="fa fa-angle-down"></i>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group right-icon">
                                    <select class="form-control" id="txt_infant" name="txt_infant">
                                        <option selected value="">Infant</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                    <i class="fa fa-angle-down"></i>
                                </div>
                                <div class="form-group right-icon">
                                    <select class="form-control" id="txt_pay_method" name="txt_pay_method">
                                        <option selected value="">Payment Method</option>
                                        <option value="Credit Card">Credit Card</option>
                                        <option value="Paypal">Paypal</option>
                                    </select>
                                    <i class="fa fa-angle-down"></i>
                                </div>

                                <div class="checkbox custom-check">
                                    <input type="checkbox" id="check01" name="checkbox" />
                                    <label for="check01"><span><i class="fa fa-check"></i></span>By continuing, you are agree to the <a href="#">Terms & Conditions.</a></label>
                                </div>
                                <div class="col-md-12 text-center" id="result_msg"></div>
                                <button class="btn btn-block btn-orange" type="submit" id="submit" name="submit">Confirm Booking</button>
                            </form>

                        </div><!-- end booking-form -->
                    </div><!-- end side-bar-block -->

                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-12">
                            <div class="side-bar-block main-block ad-block">
                                <div class="main-img ad-img">
                                    <a href="#">
                                        <img src="~/customerassets/images/car-ad.jpg" class="img-fluid" alt="car-ad" />
                                        <div class="ad-mask">
                                            <div class="ad-text">
                                                <span>Luxury</span>
                                                <h2>Car</h2>
                                                <span>Offer</span>
                                            </div><!-- end ad-text -->
                                        </div><!-- end columns -->
                                    </a>
                                </div><!-- end ad-img -->
                            </div><!-- end side-bar-block -->
                        </div><!-- end columns -->

                        <div class="col-12 col-md-6 col-lg-12">
                            <div class="side-bar-block support-block">
                                <h3>Need Help</h3>
                                <p>Lorem ipsum dolor sit amet, ad duo fugit aeque fabulas, in lucilius prodesset pri. Veniam delectus ei vis. Est atqui timeam mnesarchum.</p>
                                <div class="support-contact">
                                    <span><i class="fa fa-phone"></i></span>
                                    <p>+1 123 1234567</p>
                                </div><!-- end support-contact -->
                            </div><!-- end side-bar-block -->
                        </div><!-- end columns -->

                    </div><!-- end row -->
                </div><!-- end columns -->

                <div class="col-12 col-md-12 col-lg-9 col-xl-9 content-side">

                    <div class="detail-slider">
                        <div class="feature-slider">
                            <div><img src="~/customerassets/images/f-feature-1.jpg" class="img-fluid" alt="feature-img" /></div>
                            
                        </div><!-- end feature-slider -->

                        <div class="feature-slider-nav">
                            <div><img src="~/customerassets/images/f-feature-thumb-1.jpg" class="img-fluid" alt="feature-thumb" /></div>
                            
                        </div><!-- end feature-slider-nav -->

                        <ul class="list-unstyled features flight-features">
                            <li><div class="f-icon"><i class="fa fa-plane"></i></div><div class="f-text"><p class="f-heading">From</p><p class="f-data">@Model.From</p></div></li>
                            <li><div class="f-icon"><i class="fa fa-plane"></i></div><div class="f-text"><p class="f-heading">To</p><p class="f-data">@Model.To</p></div></li>
                            <li><div class="f-icon"><i class="fa fa-clock-o"></i></div><div class="f-text"><p class="f-heading">Total Time</p><p class="f-data">@Model.TotalTime</p></div></li>
                        </ul>
                    </div><!-- end detail-slider -->

                    <div class="detail-tabs">
                        <ul class="nav nav-tabs nav-justified">
                            <li class="nav-item active"><a class="nav-link" href="#flight-info" data-toggle="tab">Flight Information</a></li>
                            <li class="nav-item"><a class="nav-link" href="#entertainment" data-toggle="tab">Entertainment</a></li>
                            <li class="nav-item"><a class="nav-link" href="#connectivity" data-toggle="tab">Connectivity</a></li>
                            <li class="nav-item"><a class="nav-link" href="#fare" data-toggle="tab">Fare</a></li>
                            <li class="nav-item"><a class="nav-link" href="#baggage" data-toggle="tab">Baggage</a></li>
                        </ul>

                        <div class="tab-content">

                            <div id="flight-info" class="tab-pane in active">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 tab-img">
                                        <img src="~/customerassets/images/flight-detail-tab-1.jpg" class="img-fluid" alt="flight-detail-img" />
                                    </div><!-- end columns -->

                                    <div class="col-md-8 col-lg-8 tab-text">
                                        <h3>Flight Information</h3>
                                        <p>@Model.Description</p>
                                    </div><!-- end columns -->
                                </div><!-- end row -->
                            </div><!-- end flight-info -->

                            <div id="entertainment" class="tab-pane">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 tab-img">
                                        <img src="~/customerassets/images/flight-detail-tab-2.jpg" class="img-fluid" alt="flight-detail-img" />
                                    </div><!-- end columns -->

                                    <div class="col-md-8 col-lg-8 tab-text">
                                        <h3>Entertainment</h3>
                                        <p>Vietnam is a country full of entertainment options for travelers. From traditional cultural shows, to modern music festivals, and outdoor adventure activities such as trekking or kayaking. Whether you're looking to explore the vibrant nightlife in Ho Chi Minh City or relax on a secluded beach in Nha Trang, there's something for everyone. Book your flight now and get ready to experience the best of Vietnamese entertainment.</p>
                                    </div><!-- end columns -->
                                </div><!-- end row -->
                            </div><!-- end entertainment -->

                            <div id="connectivity" class="tab-pane">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 tab-img">
                                        <img src="~/customerassets/images/flight-detail-tab-3.jpg" class="img-fluid" alt="flight-detail-img" />
                                    </div><!-- end columns -->

                                    <div class="col-md-8 col-lg-8 tab-text">
                                        <h3>Connectivity</h3>
                                        <p>Nestled in the heart of @Model.To, lies an enchanting travel gem waiting to be explored. With its stunning natural beauty, rich cultural heritage, and vibrant local scene, this destination promises an unforgettable experience for travelers seeking adventure, relaxation, or simply a change of scenery. From mouth-watering cuisine to breathtaking vistas, there's something here for everyone. So pack your bags, and embark on a journey filled with endless possibilities and memories that will last a lifetime.</p>
                                    </div><!-- end columns -->
                                </div><!-- end row -->
                            </div><!-- end connectivity -->

                            <div id="fare" class="tab-pane">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 tab-img">
                                        <img src="~/customerassets/images/flight-detail-tab-4.jpg" class="img-fluid" alt="flight-detail-img" />
                                    </div><!-- end columns -->

                                    <div class="col-md-8 col-lg-8 tab-text">
                                        <h3>Fare</h3>
                                        <p>We offer affordable flight tickets to many destinations across Vietnam. Whether you're looking for an exotic getaway or a romantic retreat, we've got you covered. With prices from @Model.Price.Value.ToString("#,##0") VNĐ, you too can make your travel dreams to @Model.To come true. Don't wait - book your next adventure today!</p>
                                    </div><!-- end columns -->
                                </div><!-- end row -->
                            </div><!-- end fare -->

                            <div id="baggage" class="tab-pane">
                                <div class="row">
                                    <div class="col-md-4 col-lg-4 tab-img">
                                        <img src="~/customerassets/images/flight-detail-tab-5.jpg" class="img-fluid" alt="flight-detail-img" />
                                    </div><!-- end columns -->

                                    <div class="col-md-8 col-lg-8 tab-text">
                                        <h3>Baggage</h3>
                                        <p>We want to make your travel experience as stress-free as possible. That's why we offer a generous baggage allowance on all our flights, so you can pack everything you need for your trip. Our experienced team will handle your bags with care and ensure they arrive at your destination safely and on time. Let us help you make your next trip unforgettable!</p>
                                    </div><!-- end columns -->
                                </div><!-- end row -->
                            </div><!-- end baggage -->

                        </div><!-- end tab-content -->
                    </div><!-- end detail-tabs -->

                    <div class="available-blocks" id="available-seats">
                        <h2>Available Seats</h2>

                        @if (lsFlights != null)
                            {
                                foreach (var item in lsFlights)
                                {
                                    string _url = $"/flight-detail/{item.Alias}-{item.FlightId}.html";
                                    <div class="list-block main-block seat-block">
                                        <div class="list-content">
                                            <div class="main-img list-img seat-img">
                                            <a href="@_url">
                                               <img src="~/customerassets/images/available-seat-1.jpg" class="img-fluid" alt="seat-img" />
                                            </a>
                                        <div class="main-mask">
                                            <ul class="list-unstyled list-inline offer-price-1">
                                                <li class="list-inline-item price">@item.Price.Value.ToString("#,##0") VNĐ<span class="divider">|</span><span class="pkg">@item.FlightName</span></li>
                                                <li class="list-inline-item rating">
                                                    <span><i class="fa fa-star orange"></i></span>
                                                    <span><i class="fa fa-star orange"></i></span>
                                                    <span><i class="fa fa-star orange"></i></span>
                                                    <span><i class="fa fa-star orange"></i></span>
                                                    <span><i class="fa fa-star lightgrey"></i></span>
                                                </li>
                                            </ul>
                                        </div><!-- end main-mask -->
                                        </div><!-- end seat-img -->

                                            <div class="list-info seat-info">
                                                <h3 class="block-title"><a href="@_url">@item.Tags</a></h3>
                                                <p class="block-minor">@item.FlightName</p>
                                                <p>@item.Title</p>
                                                <a href="@_url" class="btn btn-orange btn-lg">View More</a>
                                            </div><!-- end seat-info -->
                                        </div><!-- end list-content -->
                                    </div><!-- end seat-block -->
                                }
                            }

                    </div><!-- end available-seats -->


                    <div class="pages pagination-margin">
                        <ol class="pagination justify-content-center">
                            <li><a href="#" aria-label="Previous"><span aria-hidden="true"><i class="fa fa-angle-left"></i></span></a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#" aria-label="Next"><span aria-hidden="true"><i class="fa fa-angle-right"></i></span></a></li>
                        </ol>
                    </div><!-- end pages -->
                </div><!-- end columns -->

            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end flight-detail -->
</section><!-- end innerpage-wrapper -->
