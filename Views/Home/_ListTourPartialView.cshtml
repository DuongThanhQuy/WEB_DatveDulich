@model List<DboTour>

@if (Model != null && Model.Count() > 0)
{
    <div class="owl-carousel owl-theme owl-custom-arrow" id="owl-tour-offers">
    
        @foreach (var item in Model)
        {
            string url = $"/{item.Alias}-{item.TourId}.html";
            <div class="item">
            <div class="main-block tour-block">
                <div class="main-img">
                    <a href="@url">
                        <img src="~/customerassets/images/tour-1.jpg" class="img-fluid equal-height" alt="tour-img" />
                    </a>
                </div><!-- end offer-img -->

                <div class="offer-price-2">
                    <ul class="list-unstyled">
                            <li class="price"style="text-align:center;">@item.Price.Value.ToString("#,##0") VNĐ<a href="@url"><span class="arrow"></span></a></li>
                    </ul>
                </div><!-- end offer-price-2 -->

                <div class="main-info tour-info">
                    <div class="main-title tour-title">
                        <a href="@url">@item.TourName</a>
                        <p>@item.Title</p>
                        <div class="rating">
                            @if (item.Price >= 3500000)
                            {
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                            }
                            else @if (item.Price < 3500000 && item.Price >= 1000000)
                            {
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star lightgrey"></i></span>
                            }
                            else @if (item.Price < 1000000)
                            {
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star orange"></i></span>
                                <span><i class="fa fa-star lightgrey"></i></span>
                                <span><i class="fa fa-star lightgrey"></i></span>
                            }
                        </div>
                    </div><!-- end tour-title -->
                </div><!-- end tour-info -->
            </div>
            </div>
            <!-- end tour-block -->
        }
        
    

    <!-- end item -->
    </div>
}