@model List<DboHotel>

@if (Model != null && Model.Count() > 0)
{
    <div class="owl-carousel owl-theme owl-custom-arrow" id="owl-hotel-offers">
        @foreach (var item in Model)
        {
            string url = $"/{item.Alias}-{item.HotelId}.html";
            <div class="item">
                <div class="main-block hotel-block">
                    <div class="main-img">
                        <a href="@url">
                            <img src="~/customerassets/images/hotel-1.jpg" class="img-fluid" alt="hotel-img" />
                        </a>
                        <div class="main-mask">
                            <ul class="list-unstyled list-inline offer-price-1">
                                <li class="list-inline-item price">@item.Price.Value.ToString("#,##0") VNĐ<span class="divider">|</span><span class="pkg">/Night</span></li>
                                <li class="list-inline-item rating">
                                    <span><i class="fa fa-star orange"></i></span>
                                    <span><i class="fa fa-star orange"></i></span>
                                    <span><i class="fa fa-star orange"></i></span>
                                    <span><i class="fa fa-star orange"></i></span>
                                    <span><i class="fa fa-star lightgrey"></i></span>
                                </li>
                            </ul>
                        </div><!-- end main-mask -->
                    </div><!-- end offer-img -->

                    <div class="main-info hotel-info">
                        
                        <div class="main-title hotel-title">
                            <a href="@url">@item.HotelName</a>
                        </div><!-- end hotel-title -->
                    </div><!-- end hotel-info -->
                </div><!-- end hotel-block -->
            </div>

            <!-- end item -->
        }

    </div>

    <!-- end owl-hotel-offers -->
}