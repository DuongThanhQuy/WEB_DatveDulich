
@model IEnumerable<TravelFinalProject.Models.DboAccount>
@{
    ViewData["Title"] = "Admin Account Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
		<div class="d-flex justify-content-between align-items-center flex-wrap">
			<div class="card-action coin-tabs mb-2">
				<ul class="nav nav-tabs" role="tablist">
					<li class="nav-item">
						<a class="nav-link active" asp-area="Admin" asp-controler="Home" asp-action="Index">All Account</a>
					</li>
				</ul>
				
			</div>
			<div class="d-flex align-items-center mb-2 flex-wrap">
				<div class="js-example-theme-single newest ms-3">
					<select class="default-select" asp-items="ViewBag.Role" id="idrole" name="idrole">
						<option value="0" disabled selected>Choose Access</option>
						<option value="all">All</option>
					</select>
					

				</div>
				<div class="js-example-theme-single newest ms-3">
					<select class="default-select" asp-items="ViewBag.lsStatus" id="idstatus" name="idstatus">
						<option value="" disabled selected>Choose Status</option>
					</select>
				</div>
			</div>
		</div>
		<div class="row mt-4">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body p-0">
						<div class="d-flex align-items-center mb-3">
					
						
						</div>
						<div class="tab-content">
							<div class="tab-pane active show" id="AllEmployee">
								<div class="table-responsive">
									<table class="table card-table display mb-4 shadow-hover table-responsive-lg" id="guestTable-all">
										<thead>
											<tr>
												
												<th>Fullname</th>
												<th>Email</th>
												<th>Contact</th>
												<th>Role</th>
												<th>Status</th>
												<th>Last signed in</th>
											</tr>
										</thead>
										<tbody>
											@if(Model != null)
											{
												foreach(var item in Model)
												{
											<tr>
												<td>
													<div class="concierge-list-bx d-flex align-items-center">
														<img class="me-3 rounded" src="~/adminassets/images/avatar/pic1.jpg" alt="">
														<div>
															<h5 class="fs-16 mb-0 text-nowrap"><a class="text-black" href="javascript:void(0);">@item.FullName</a></h5>
															<span class=" text-secondary fs-14 d-block">@item.AccountId</span>
															<span class=" fs-14  text-nowrap">@item.CreateDate</span>
														</div>
													</div>
												</td>
												<td>
													<p class="mb-0">@item.Email</p>
												</td>
							
												<td>
													<div>
														<span class="font-w600 text-nowrap"><i class="fas fa-phone-alt me-2 "></i>@item.Phone</span>
													</div>
												</td>
												<td>
													<p class="mb-0">@item.Role.Description</p>
												</td>
												<td>
													@if (item.Active)
													{
														<span class="font-w600 text-success">@item.Active</span>
													}
													else
													{
														<span class="font-w600 text-danger">@item.Active</span>
													}
												</td>
												<td>
													<p class="mb-0">@item.LastLogin</p>
												</td>
												<td>
													<a type="button" class="btn btn-warning" asp-area="Admin" asp-controller="AdminDboAccounts" asp-action="Details" asp-route-id="@item.AccountId">View</a>
													<a type="button" class="btn btn-secondary" asp-area="Admin" asp-controller="AdminDboAccounts" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a>
													<a type="button" class="btn btn-info" asp-area="Admin" asp-controller="AdminDboAccounts" asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
												</td>
											</tr>
												}
											}
											
										</tbody>
									</table>
								</div>
							</div>
