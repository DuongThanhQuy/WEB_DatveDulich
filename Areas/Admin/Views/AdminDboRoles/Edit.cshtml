@model TravelFinalProject.Models.DboRole

@{
    ViewData["Title"] = "Edit Access";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header d-block">
    <h5 class="card-title">Edit Access For</h5>
    <h1>@Model.RoleName</h1>
</div>
<hr />
<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-asp-validation-summary="ModeOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId"/>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Rold Name</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" asp-for="RoleName" placeholder="RoleName">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" asp-for="Description" placeholder="Description">
        </div>
    </div>
    
    <div class="mb-3 row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

